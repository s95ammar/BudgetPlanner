<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/cairo</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:autofilledHighlight" tools:targetApi="o">@color/colorTransparent</item>

    </style>

    <style name="BudgetPlannerAppBarLayout">
        <item name="android:background">@color/colorTransparent</item>
    </style>

    <style name="BudgetPlannerMaterialToolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">@color/colorWhite</item>
    </style>

    <style name="TextTitleWhite16ssp">
        <item name="android:fontFamily">@font/cairo</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="TextTitleWhite14ssp">
        <item name="android:fontFamily">@font/cairo</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="TextTitleBlack16ssp">
        <item name="android:fontFamily">@font/cairo</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="TextDescBlack14ssp">
        <item name="android:fontFamily">@font/cairo</item>
