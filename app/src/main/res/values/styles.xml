<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BudgetPlannerAppBarLayout">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BudgetPlannerMaterialToolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">@color/colorWhite</item>
    </style>

    <style name="TextTitleBlackBold16sdp">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextDescBlack14sdp">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="TextDescGray12sdp">
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

</resources>